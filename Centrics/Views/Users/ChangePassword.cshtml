@model Centrics.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<h2>Change Password</h2>
@using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CurrentPassword, new { @class = "form-control", @type = "password" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @type = "password" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CfmNewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CfmNewPassword, new { @class = "form-control", @type = "password" })
        </div>
    </div>

    <input type="submit" value="Change Password" />
}
    @ViewBag.Message