@model Contract
@{
    ViewData["Title"] = "ModifyContract";
    var i = Model.MSH;
}

<h2>Modify Contract</h2>
<style>
    body{
        max-width:50%
    }
    div .form-group{
        width:100%;
        
    }
    div.col-md-7{
        width :100%;
    }    
</style>

<!-- jQuery UI CSS Reference -->
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
<!-- Required jQuery and jQuery UI Javascript references -->
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")"></script>

<!-- Code to wire up your DatePicker -->
<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
</script>


@*edit to call update contract?*@
@using (Html.BeginForm("ModifyContract", "Contract", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.ClientCompany, new { @class = "col-md-2 control-label"})
        <div class="col-md-7">
            @Html.TextBoxFor(m => m.ClientCompany, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.MSH, new { @class = "col-md-2 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(m => m.MSH, new { @class = "form-control" })
            <span style="color:red;font-size:0.8em;">Original value: @i</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StartValid, new { @class = "col-md-2 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(m => m.DateForDisplay, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EndValid, new { @class = "col-md-2 control-label" })
        <div class="col-md-7">
            @Html.EditorFor(m => m.EndValid, new { @class = "datepicker" })
        </div>
    </div>
    @Html.HiddenFor(m => m.idcontract);
    @*update msh & delete contract ahref it*@
    <input type ="submit" value="Save Changes" class="button"/>
    <input type ="reset" value="Discard Changes" class="button"/>
}